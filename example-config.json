{
  "mcpServers": {
    "file-server": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/tmp"
      ],
      "env": {}
    },
    "web-server": {
      "url": "http://localhost:3001",
      "authorizationToken": ""
    },
    "critical-api": {
      "url": "https://api.example.com/mcp",
      "authorizationToken": "bearer-token-here"
    }
  },
  "httpServer": {
    "host": "localhost",
    "port": 8080,
    "corsEnabled": true,
    "corsOrigins": [
      "*"
    ],
    "shutdownTimeout": 5,
    "middleware": {
      "proxy": [
        {
          "type": "description_enricher",
          "enabled": true,
          "config": {}
        },
        {
          "type": "tool_search",
          "enabled": true,
          "config": {
            "maxToolsLimit": 50,
            "searchThreshold": 0.1,
            "toolSelectionOrder": [
              "server_priority"
            ]
          }
        }
      ],
      "client": {
        "default": [
          {
            "type": "logging",
            "enabled": true,
            "config": {}
          }
        ],
        "servers": {
          "critical-api": [
            {
              "type": "security",
              "enabled": true,
              "config": {
                "rules": [
                  {
                    "name": "no_system_commands",
                    "description": "Block dangerous system commands",
                    "pattern": "(?i)(rm\\s+-rf|sudo\\s+|passwd\\s+|shutdown|reboot)",
                    "block_message": "System commands are not allowed",
                    "enabled": true
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }
}