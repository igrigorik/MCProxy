{
  "mcpServers": {
    "file-server": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/tmp"
      ],
      "env": {}
    },
    "web-server": {
      "url": "http://localhost:3001",
      "authorizationToken": ""
    },
    "critical-api": {
      "url": "https://api.example.com/mcp",
      "authorizationToken": "bearer-token-here"
    }
  },
  "httpServer": {
    "host": "localhost",
    "port": 8080,
    "corsEnabled": true,
    "corsOrigins": [
      "*"
    ],
    "shutdownTimeout": 5,
    "middleware": {
      "proxy": [
        {
          "type": "description_enricher",
          "enabled": true,
          "config": {}
        }
      ],
      "client": {
        "default": [
          {
            "type": "logging",
            "enabled": true,
            "config": {
              "level": "info"
            }
          },
          {
            "type": "security",
            "enabled": true,
            "config": {
              "rules": [
                {
                  "name": "no_system_commands",
                  "description": "Block dangerous system commands",
                  "pattern": "(?i)(rm\\s+-rf|sudo\\s+|passwd\\s+|shutdown|reboot|format|del\\s+/|rd\\s+/s)",
                  "block_message": "System commands are not allowed",
                  "enabled": true
                },
                {
                  "name": "no_sensitive_files",
                  "description": "Block access to sensitive files",
                  "pattern": "(?i)(/etc/passwd|/etc/shadow|\\.ssh/|\\.aws/|\\.env|config\\.json|secrets?)",
                  "block_message": "Access to sensitive files is not allowed",
                  "enabled": true
                },
                {
                  "name": "no_network_commands",
                  "description": "Block network commands",
                  "pattern": "(?i)(curl|wget|nc|netcat|telnet|ssh|ftp|sftp)\\s+",
                  "block_message": "Network commands are not allowed",
                  "enabled": true
                },
                {
                  "name": "no_secret_tokens",
                  "description": "Block leaks of secret tokens",
                  "pattern": "(?i)(github_pat)",
                  "block_message": "Leaking secret tokens is not allowed",
                  "enabled": true
                }
              ],
              "log_blocked": true
            }
          }
        ],
        "servers": {
          "critical-api": [
            {
              "type": "logging",
              "enabled": true,
              "config": {
                "level": "debug"
              }
            }
          ],
          "file-server": [
            {
              "type": "logging",
              "enabled": false
            },
            {
              "type": "tool_filter",
              "enabled": true,
              "config": {
                "disallow": "test|debug|dev"
              }
            }
          ],
          "web-server": [
            {
              "type": "tool_filter",
              "enabled": true,
              "config": {
                "allow": "search_|get_"
              }
            }
          ]
        }
      }
    }
  }
}